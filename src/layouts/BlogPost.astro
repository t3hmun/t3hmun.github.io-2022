---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { friendlyDate } from "../components/Formats";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main class="bg-light-back dark:bg-dark-back">
      <article
        class="prose mx-auto px-1 prose-h2:text-amber-500 prose-h3:text-amber-600 prose-h4:text-amber-700 prose-h5:text-amber-800 prose-h6:text-amber-900 prose-a:text-green-700 hover:prose-a:text-green-600 prose-code:before:hidden prose-code:after:hidden dark:prose-invert dark:prose-h2:text-amber-500 dark:prose-h3:text-amber-400 dark:prose-h4:text-amber-300 dark:prose-h5:text-amber-200 dark:prose-h6:text-amber-100 dark:prose-a:text-green-500 dark:hover:prose-a:text-green-300"
      >
        {heroImage && <img width={720} height={360} src={heroImage} alt="" />}
        <h1>{title}</h1>
        <div>
          <span>
            {pubDate && <time>{friendlyDate(pubDate)}</time>}
            {
              updatedDate && (
                <span>
                  {" "}
                  Last updated on <time>{friendlyDate(updatedDate)}</time>
                </span>
              )
            }</span
          >
        </div>
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
